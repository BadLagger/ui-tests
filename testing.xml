<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="UI Testing Project Suite" verbose="1" parallel="tests" thread-count="1">

    <test name="Web Tests - Smoke" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <parameter name="environment" value="test"/>

        <classes>
            <class name="web.tests.WebTests">
                <methods>
                    <include name="testOpenMainPage"/>
                    <include name="testNavigationToLoginPage"/>
                    <include name="testSuccessfulLogin"/>
                    <include name="testCheckboxesFunctionality"/>
                    <include name="testDropdownFunctionality"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Web Tests - Full" preserve-order="true">
        <parameter name="browser" value="chrome"/>
        <parameter name="environment" value="test"/>

        <classes>
            <class name="web.tests.WebTests"/>
        </classes>
    </test>

    <test name="Mobile Tests - Wikipedia" preserve-order="true">
        <parameter name="platform" value="android"/>
        <parameter name="environment" value="test"/>

        <classes>
            <class name="mobile.tests.WikipediaTests">
                <methods>
                    <include name="testAppLaunchAndSkipWelcome"/>
                    <include name="testSearchArticle"/>
                    <include name="testArticleTitleVerification"/>
                    <include name="testBackNavigationFromArticle"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>